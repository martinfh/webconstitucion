<head>
   <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
      <link rel="stylesheet" type="text/css" href="trix.css">
  <script type="text/javascript" src="trix.js"></script>
</head>

<%= form_with(model: exposicion, local: true) do |form| %>
  <% if exposicion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(exposicion.errors.count, "error") %> prohibited this exposicion from being saved:</h2>

      <ul>
      <% exposicion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :titulo_expo %>
    <%= form.text_field :titulo_expo %>
  </div>

  <div class="field">
    <%= form.label :fechas %>
    <%= form.text_field :fechas %>
  </div>

  <div class="field">
    <%= form.label :texto %>
    <%= form.hidden_field :texto, id: :exposicion_texto%>
    <trix-editor input="exposicion_texto" style="background-color: white;color: black;"></trix-editor>
  </div>

  <div class="field">
    <%= form.label :imagenes_expo %>
    <%= form.file_field :imagenes_expo, multiple: true %>
  </div>

  <div class="field">
    <%= form.label :gacetilla %>
    <%= form.file_field :gacetilla %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
