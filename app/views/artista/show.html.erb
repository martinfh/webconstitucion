<!DOCTYPE html>
<html>
	<head>	
		<p id="notice"><%= notice %></p>
			<div class="boton_atras">
				<%=link_to (image_tag 'fotos/flecha_atras.png',style:"height:50px"), artista_path %>
			</div>
	<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
	</head>
	<body>
		<div>
			<p class="header_artista">
				<%= @artistum.nombre %></p>
			<p class="cuerpo_artistxs">
		  			<%= @artistum.cv %></p>
		</div>
		&nbsp
		<div class="visordeimagenes">
			SELECCIÃ“N DE OBRAS
			<div class="w3-content w3-display-container">
					<%(0...@artistum.imagen.count).each do |imagen|%>
				<div class="mySlides">
					<button class="w3-button w3-display-left" onclick="plusDivs(-1)">&#10094;</button>
					<%= image_tag(@artistum.thumbnail(imagen))%>
					<button class="w3-button w3-display-right" onclick="plusDivs(+1)">&#10095;</button>
				</div>
					<%end%>			
			</div>
		 </div>
	<script type="text/javascript">
     var slideIndex = 1;
showDivs(slideIndex);

function plusDivs(n) {
  showDivs(slideIndex += n);
}

function showDivs(n) {
  var i;
  var x = document.getElementsByClassName("mySlides");
  if (n > x.length) {slideIndex = 1} 
  if (n < 1) {slideIndex = x.length} ;
  for (i = 0; i < x.length; i++) {
    x[i].style.display = "none"; 
  }
  x[slideIndex-1].style.display = "block"; 
}
   </script>
				
	</body>
</html>
